<h1>Products Index Page</h1>

<div class='row'>
  <div class='col-2'>
  </div>

  <div class='col-10'>
    <% @products.each do |product| %>
    <%# if you pass a instance to link_to it will create the href='/products/:id' %>
      <%= link_to product do %>
        <li class='list-group-item'>
          <p><%= product.id %> <%= product.title %></p>
        </li>
      <% end %>
    <% end %>
  </div>
</div>